<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".checksex.CheckSexFragment">

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <Button
            android:id="@+id/buttonMan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/button_regular_height"
            android:layout_margin="@dimen/space_regular"
            android:text="@string/man_button" />

        <Button
            android:id="@+id/buttonWoman"
            android:minHeight="@dimen/button_regular_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_regular"
            android:text="@string/woman_button" />

        <Button
            android:id="@+id/buttonSearch"
            android:layout_margin="@dimen/space_regular"
            android:minHeight="@dimen/button_regular_height"
            android:layout_width="match_parent"
            android:text="@string/search_button"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</FrameLayout>