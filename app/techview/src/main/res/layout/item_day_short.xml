<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    tools:ignore="UnusedAttribute"
    android:foreground="?selectableItemBackground"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/dayImageView"
        android:layout_margin="@dimen/space_small"
        android:layout_width="@dimen/button_regular_height"
        android:layout_height="@dimen/button_regular_height"
        android:contentDescription="@string/day_image_description" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dayNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:text="День №1"
            android:layout_marginStart="@dimen/space_small"
            android:layout_marginEnd="@dimen/space_regular" />

        <TextView
            android:layout_marginStart="@dimen/space_regular"
            android:layout_marginEnd="@dimen/space_regular"
            android:layout_gravity="end"
            tools:text="7 упражнений"
            android:id="@+id/exercisesCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>



</LinearLayout>